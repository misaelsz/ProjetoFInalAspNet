@model AgenciaBancaria.Models.Conta
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Bem vindo!</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			<h3>Sacar</h3>
			<div class="col-md-10">
				@Html.TextBox("valor", null, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Saldo, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Sacar"
					   class="btn btn-default"
					   formaction="Sacar"
					   formmethod="post" />
			</div>
		</div>

		<div class="form-group">
			<h3>Depositar</h3>
			<div class="col-md-10">
				@Html.TextBox("valor", null, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Depositar"
					   class="btn btn-default"
					   formaction="Depositar"
					   formmethod="post" />
			</div>
		</div>

		<div class="form-group">
			<h3>Transferir</h3>
			<div class="col-md-10">
				<h4>Valor</h4>
			    @Html.TextBox("valor", null, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group">
			<h4>Numero da conta de destino</h4>
			<div class="col-md-10">
				@Html.TextBox("ContaDestino", null, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group">
			<h4>Numero da agencia</h4>
			<div class="col-md-10">
				@Html.TextBox("AgenciaDestino", null, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Transferir"
					   class="btn btn-default"
					   formaction="Transferir"
					   formmethod="post" />
			</div>
		</div>

	</div>
}

		<div>
			@Html.ActionLink("Back to List", "Index")
		</div>

		<script src="~/Scripts/jquery-1.10.2.min.js"></script>
		<script src="~/Scripts/jquery.validate.min.js"></script>
		<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

